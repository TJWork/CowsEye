<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/details_background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/detailsScreenTitle"
        style="@style/titleHeading"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/instructionsTextView"
        style="@style/detailsMainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detailsScreenMainText" />

    <TableLayout
        android:id="@+id/details_table"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/table_layout_border" >

        <TableRow
            android:id="@+id/details_photo_row"
            style="@style/topTableRow" >

            <ImageView
                style="@style/tableRowImage"
                android:src="@drawable/leftimage1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:weightSum="1" >

                <TextView
                    style="@style/firstRowDetails"
                    android:text="@string/detailsScreenTakeAPhoto" />

                <TextView
                    android:id="@+id/photoAddedTextView"
                    style="@style/secondRowDetails"
                    android:text="@string/noPhotoAdded" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" >

                <ImageView style="@style/detailsArrow" />
            </FrameLayout>
        </TableRow>

        <TableRow
            android:id="@+id/details_location_row"
            style="@style/middleTableRow" >

            <ImageView
                style="@style/tableRowImage"
                android:src="@drawable/leftimage2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:weightSum="1" >

                <TextView
                    style="@style/firstRowDetails"
                    android:text="@string/detailsScreenRecordLocation" />

                <TextView
                    android:id="@+id/locationAddedTextView"
                    style="@style/secondRowDetails"
                    android:text="@string/noLocationRecorded" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" >

                <ImageView style="@style/detailsArrow" />
            </FrameLayout>
        </TableRow>

        <TableRow
            android:id="@+id/details_problem_row"
            style="@style/middleTableRow" >

            <ImageView
                style="@style/tableRowImage"
                android:src="@drawable/leftimage3" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:weightSum="1" >

                <TextView
                    style="@style/firstRowDetails"
                    android:text="@string/detailsScreenDescribeProblem" />

                <TextView
                    android:id="@+id/problemAddedTextView"
                    style="@style/secondRowDetails"
                    android:text="@string/noDescriptionAdded" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" >

                <ImageView style="@style/detailsArrow" />
            </FrameLayout>
        </TableRow>

        <TableRow
            android:id="@+id/details_contact_row"
            style="@style/bottomTableRow" >

            <ImageView
                style="@style/tableRowImage"
                android:src="@drawable/leftimage4" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:weightSum="1" >

                <TextView
                    style="@style/firstRowDetails"
                    android:text="@string/detailsScreenContactDetails" />

                <TextView
                    android:id="@+id/contactAddedTextView"
                    style="@style/secondRowDetails"
                    android:text="@string/noContactDetailsAdded" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" >

                <ImageView style="@style/detailsArrow" />
            </FrameLayout>
        </TableRow>
    </TableLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <Button
            android:id="@+id/detailsSubmitButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:background="@drawable/submit_button"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/submitReportButtonText"
            android:textColor="@color/submit_report_button_text"
            android:textStyle="bold" >
        </Button>
    </FrameLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/details_background"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/descriptionScreenTitle"
            style="@style/titleHeading"
            android:text="@string/description_title" />

        <Button
            android:id="@+id/backButton"
            style="@style/backButtonStyle" />

        <Button
            android:id="@+id/nextButton"
            style="@style/nextButtonStyle" />
    </FrameLayout>

    <TextView
        android:id="@+id/EnterDescriptionLabel"
        style="@style/field_title_style"
        android:paddingTop="10dp"
        android:text="@string/description_labeltitle" />

    <EditText
        android:id="@+id/descriptionText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:inputType="text" >

        <requestFocus />
    </EditText>

    <TextView
        android:paddingTop="10dp"
        android:id="@+id/ChooseImageTag"
        style="@style/field_title_style"
        android:text="@string/tag_labeltitle" />

    <Spinner
        android:id="@+id/phototag_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</LinearLayout>